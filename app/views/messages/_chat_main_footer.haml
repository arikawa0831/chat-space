.chat__main__footer
  = form_for [@group, @message] do |f|
    = f.text_field :content, class: 'chat__main__footer__form__text', placeholder: 'type a message'
    .chat__main__footer__form
      = f.label :image, class: 'chat__main__footer__form__text__img' do
        = fa_icon 'picture-o', class: 'icon'
        = f.file_field :image, class: 'hidden'
    = f.submit 'Send', class: 'chat__main__footer__form__send'






